{
  "$schema": "http://json.schemastore.org/template",
  "author": "KazoHome",
  "classifications": ["Home Assistant", "Integration", "Custom Component", "Hybrid"],
  "identity": "KazoHome.Templates.Integration",
  "name": "KazoHome Integration (Hybrid C# + Python)",
  "shortName": "kazohome-integration",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "KazoHomeIntegration",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net10.0",
          "description": "Target net10.0"
        }
      ],
      "defaultValue": "net10.0"
    },
    "IntegrationDomain": {
      "type": "parameter",
      "dataType": "string",
      "defaultValue": "kazohome_integration",
      "description": "The Home Assistant domain for the integration",
      "replaces": "kazohome_integration"
    },
    "IntegrationName": {
      "type": "parameter",
      "dataType": "string",
      "defaultValue": "KazoHome Integration",
      "description": "The display name of the integration"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "include": ["**/*"]
        }
      ]
    }
  ]
}
